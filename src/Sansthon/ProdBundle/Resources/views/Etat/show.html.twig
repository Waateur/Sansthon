{% extends 'SansthonProdBundle::layout.html.twig' %}

{% block body -%}
    <h1>Etat</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Debut</th>
                <td>{{ entity.debut|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Fin</th>
                <td>{{ entity.fin|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Stocked</th>
                <td>{{ entity.stocked }}</td>
            </tr>
            <tr>
                <th>Quantite</th>
                <td>{{ entity.quantite }}</td>
            </tr>
            <tr>
                <th>Commentaire</th>
                <td>{{ entity.commentaire }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('etat') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('etat_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('etat_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
