{% extends 'SansthonProdBundle::layout.html.twig' %}

{% block body -%}
    <h1>En cours par Réfèrence </h1>
{% include 'SansthonProdBundle:Etat:TypeSelect.html.twig'
               with {'types': types, 'path': 'etat_by_type','current': type}
        %}
<div class="row-fluid">
 {% for stock in stocks %}
   <div class="stockblock span3">
    <header>{{stock.etape}}</header>
    <div class="stockValue"> {{stock.value}} </div>
    <footer class="row-fluid">
    {% for chemin in stock.etape.sorties %}
        <div class="span4 btn btform ">{{chemin.nom}} </div>
    {% endfor %}
    </footer>
  </div>
 {% endfor %}
</div>

    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Quantité</th>
                <th>Etape</th>
                <th>Attribution</th>
                <th>Prévision</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
       {% if etatList %}
        {% for entity in etatList %}
            <tr>
                <td><a href="{{ path('etat_show', { 'id': entity.id }) }}" class="btn">{{ entity.id }}</a></td>
                <td>{{entity.type.reference}} {{entity.type.nom}} </td>
                <td>{{ entity.quantite }}</td>
                <td>{{ entity.etape }}</td>
                <td>{% if entity.personne %}{{entity.personne.nom }}{% endif %} </td>
                <td>{{ entity.prevue }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('etat_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('etat_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        {% endif %}
        </tbody>
    </table>

<a href="#EntreeSortieModal" role="button" class="btn" data-toggle="modal">Launch demo modal</a>
 
<!-- Modal -->
<div id="EntreeSortieModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="EntreeSortie" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">Produire</h3>
  </div>
  <form action="#" method="post">
    <fieldset>
      <div class="modal-body">
              <div class="input-append input-prepend">
            <label for="quantite">Quantité</label>
            <input type="number" name="quantie" id="formquantite" class="number ui-widget-content ui-corner-all" />
            <label for="date">Date retour prévue</label>
            <input type="date" name="prevue" id="formprevue" value="" class="date ui-widget-content ui-corner-all" /><span class="add-on"><i class="icon-calendar"></i></span>
          </div>
      </div>
      <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Annuler</button>
        <button class="btn btn-primary">Valider</button>
      </div>
    </fieldset>
  </form>
</div>
 {% endblock %}
